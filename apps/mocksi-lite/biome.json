{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUselessElse": "error",
				"useBlockStatements": "error"
			}
		}
	},
	"files": {
		"ignore": ["dist/*"]
	}
}
