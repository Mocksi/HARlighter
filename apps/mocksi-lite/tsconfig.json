{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"allowJs": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": false,
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext", "es2022"],
		"moduleResolution": "node",
		"module": "ESNext",
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": false,
		"noEmitOnError": true,
		"skipDefaultLibCheck": false,
		"skipLibCheck": true,
		"target": "ES2015",
		"typeRoots": ["node_modules/@types", "node_modules/@chrome"],
		"types": ["node", "chrome"],
		"outDir": "dist/chrome",
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"inlineSources": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveWatchOutput": true
	},
	"include": ["./", "typings.d.ts", "."],
	"exclude": [
		"node_modules",
		"dist",
		"chrome_dev_build",
		"./**/*.test.ts",
		"**/dist",
		"browser-extension-test-data",
		"__TEST__",
		"programs/create/templates/**"
	]
}
