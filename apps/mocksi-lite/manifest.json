{
	"manifest_version": 3,
	"version": "1.0",
	"name": "mocksi-lite",
	"description": "An extension template using React and TypeScript. This template includes a content script using Tailwind.css. To see it in action, visit https://extension.js.org.",
	"background": {
		"service_worker": "./background.ts"
	},
	"action": {},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"run_at": "document_start",
			"js": ["./content/content.tsx"]
		}
	],
	"permissions": [
		"activeTab",
		"webRequest",
		"downloads",
		"storage",
		"background",
		"tabs",
		"cookies"
	],
	"host_permissions": ["https://*/*", "<all_urls>"],
	"icons": {
		"16": "public/icon/icon16.png",
		"48": "public/icon/icon48.png",
		"128": "public/icon/icon128.png"
	}
}
