{
	"manifest_version": 3,
	"version": "1.0",
	"name": "mocksi-lite",
	"description": "Mocksi Lite",
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_title": "Mocksi Lite"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content/content.js"],
			"css": ["content/content.css"],
			"run_at": "document_start"
		}
	],
	"permissions": [
		"activeTab",
		"background",
		"cookies",
		"downloads",
		"debugger",
		"scripting",
		"storage",
		"tabs",
		"webNavigation",
		"webRequest"
	],
	"host_permissions": [
		"https://*/*",
		"<all_urls>",
		"http://*/*",
		"https://api.rollbar.com/"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"content/*.js",
				"/*.map",
				"web_accessible_resources/*",
				"web_accessible_resources/*.js",
				"/*.json",
				"/*.js",
				"/*.css"
			],
			"matches": ["<all_urls>"]
		}
	],
	"icons": {
		"16": "icon/icon16.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	}
}
