{
	"manifest_version": 3,
	"version": "1.0",
	"name": "mocksi-lite",
	"description": "Mocksi Lite",
	"background": {
		"service_worker": "./background.ts"
	},
	"action": {
		"default_popup": "pages/pop-up.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["./content/content.tsx"],
			"run_at": "document_start",
			"css": [
				"./content/base.css",
				"./content/content.css",
				"./content/spinner.css"
			]
		}
	],
	"permissions": [
		"activeTab",
		"background",
		"cookies",
		"downloads",
		"debugger",
		"scripting",
		"storage",
		"tabs",
		"webNavigation",
		"webRequest"
	],
	"host_permissions": ["https://*/*", "<all_urls>", "http://*/*"],
	"web_accessible_resources": [
		{
			"resources": ["./content/content.tsx"],
			"matches": ["<all_urls>"]
		}
	],
	"icons": {
		"16": "public/icon/icon16.png",
		"48": "public/icon/icon48.png",
		"128": "public/icon/icon128.png"
	}
}
