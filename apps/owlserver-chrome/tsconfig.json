{
    "compilerOptions": {
        "baseUrl": "./",
        "allowJs": true,
        "target": "ES5",
        "skipDefaultLibCheck": false,
        "skipLibCheck": false,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "moduleResolution": "node",
        "module": "ESNext",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "noEmitOnError": true,
        "jsx": "react",
        "typeRoots": [ "node_modules/@types", "node_modules/@chrome" ]
    },
    "include": ["./src"],
    "exclude": ["./node_modules", "./dist"]
}