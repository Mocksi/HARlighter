{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@src/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "skipDefaultLibCheck": false,
    "skipLibCheck": false,
    "strict": true,
    "target": "esnext",
    "types": [
      "vite/client",
      "node",
      "chrome"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "./**/*.test.tsx?"
  ],
  "include": [
    "src",
    "utils",
    "vite.config.ts"
  ],
}